<% if form.object.errors.any? %>
<div id="error_explanation">
<div class="alert alert-danger alert-dismissible d-flex align-items-center flex-column">
The form contains <%= pluralize(form.object.errors.count,
"error") %>.

<ul>
<% form.object.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
  <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
</ul>
</div>
</div>
<% end %>