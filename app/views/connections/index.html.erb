<% provide(:title, 'Guests') %>
<section>
  <div class="container-fluid">
    <div class="row flex-nowrap">
      <%= render 'events/event_navbar' %>
      <div class="right">
        <% if @guests.blank? %>
          <p class="text-center fw-bold mt-5">Guest list empty!</p>
        <% else %>
          <%= render 'connections/guest_table', locals: { guests: @guests } %>
        <% end %>
        <div class="d-flex justify-content-center">
          <%= link_to "Add guests", contact_list_path(@user,@event),  class: "shadow-sm border border-1 border-warning btn btn-sm btn-primary mt-3 mb-5"%>
        </div>
      </div>
    </div>
  </div>
</section>
