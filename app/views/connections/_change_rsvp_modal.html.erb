


<% @guests.each do |guest| %>
<div class="modal fade" id="changeGuestStateModal-<%=guest.id%>" tabindex="-1" aria-labelledby="change_state_guest" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
        <%=form_with model: [@user, @event, connection(guest)], local: true do |f| %>
         
      <div class="modal-body">
          <div class="mb-3 select">
            <%= f.label :RSVP, "RSVP ", class: "col-form-label" %>
            <%= f.select :RSVP, options_for_select(rsvp_options,{selected: connection(guest).RSVP}) %>
           </div>
          
          
           
           </div>
      <div class="modal-footer">
        <%=f.submit "Save", class: "btn btn-primary"%>
       
        
      </div>
         <% end %>
    </div>
  </div>
</div>
<% end %>