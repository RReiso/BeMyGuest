<table class="table table-hover">
  <thead>
    <tr>
      <th>Event</th>
      <th>Date</th>
      <th>Time</th>
      <th>Place</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%=link_to event.name, user_event_path(@user,event), class: "link " %></td>
        <td><%= event.event_date.to_formatted_s(:rfc822) %></td>
        <td><%= event.event_time.to_formatted_s(:time) %></td>
        <td><%= event.place %></td>
        <td><%=link_to "", user_event_path(@user, event), method: :delete, data: {confirm: "Are you sure?"}, class: " btn-close", type: :button%></td>
      </tr>
    <% end %>
  </tbody>
</table>
