<div class="table-responsive contact-table mb-1 mt-5">
  <table class="shadow table table-hover table-light mt-2 table-borderless border border-1 border-warning">
  <thead>
    <tr>
      <td colspan="5" class="text-dark border border-warning border-1 text-center p-1 bg-primary">My events</td>
    </tr>
    <tr>
      <th>Event</th>
      <th>Date</th>
      <th>Time</th>
      <th>Place</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%=link_to event.name, user_event_path(@user,event), class: "link-to" %></td>
        <td><%= event.event_date.to_formatted_s(:rfc822) %></td>
        <td><%= event.event_time.to_formatted_s(:time) %></td>
        <td><%= event.place %></td>
        <td><%=link_to "", user_event_path(@user, event), method: :delete, data: {confirm: "Are you sure?"},"aria-label" => "Delete", class: " btn-close", type: :button%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
