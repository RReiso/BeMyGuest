<div class="mx-0 mt-5 py-1 card-general card card-custom bg-light border-white border-0">
<h5 class="mb-2 mt-3 px-4 text-center">To do</h5>
  <div class="card-body d-flex flex-column" style="overflow-y: auto">
    <% @tasks.each do |task| %>
      <div class="d-flex justify-content-between align-items-center">
        <div class="p-1 d-flex" style="overflow-y: auto">
          <input type="checkbox" class="check-box form-check-input" data-checked="<%= task.checked %>" name="task" id="<%= task.id %>">
          <label class="object-label pointer fs-6" for="<%= task.id %>" ><%= task.description %></label>
        </div>  
        <%=link_to "", user_event_task_path(@user, @event, task), method: :delete, "aria-label" => "Delete", class: "text-center btn-close ps-1 pe-2", type: :button %>
      </div>  
    <% end %>  
  </div>
</div>   