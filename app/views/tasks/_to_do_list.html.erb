<div class="right">
<table class="table  task-table  ">
  <thead>
    <tr>
      
      <th>Task</th>
      <th>Remove</th>
 
    </tr>
  </thead>

<tbody>

    <% @tasks.each do |task| %>
 
      <tr>
        
    
        <td><input type="checkbox" id="task-<%=task.id%>"><label class="task-label" for="task-<%=task.id%>"><%=task.description%></label></td>
        <td><%=link_to "Remove", user_event_task_path(@user, @event, task), method: :delete, class: "btn btn-danger btn"%></td>
      </tr>
    <% end %>
  </tbody>
   

</table>
</div>