<section class="mt-4 min-vh-100 bg-image d-flex flex-column justify-content-start align-items-center " style="background-image: url('dim.png');">
  <p class="font-dark dancing home-lead text-center mt-3 mb-4 mx-2 px-2 py-3 ">The only tool you need for flawless events</p>
  <div class="h-100 d-flex flex-column mx-2 mx-lg-5 flex-md-row justify-content-center">
    <div class="d-flex mx-lg-3 flex-column justify-content-start align-items-center">
      <h2 class="font-dark fw-bold mb-0 mb-md-1 mt-sm-3">BeMyGuest</h2>
      <%= form_with local: true, url: root_path, scope: :session do |f| %>
        <div class="mask d-flex align-items-center" >
          <div class="container h-25">
            <div class="row d-flex justify-content-center align-items-center h-100">
              <div class="col-10 col-md-11 col-lg-11 py-3">
                <div class="card shadow" style="border-radius: 5px;">
                  <div class="card-body pt-2 pb-3 px-4">
                    <h5 class="mt-2 mb-3">Log in</h5>
                    <div class="form-outline mb-3">
                      <%= f.label :email, "Email", class: "form-label mb-0" %>
                      <%= f.email_field :email, class: "form-control form-control-md", maxlength: "50", required: true%>
                    </div>
                    <div class="form-outline mb-2">
                      <%= f.label :password, "Password", class: "form-label mb-0" %>
                      <%= f.password_field :password, class: "form-control form-control-md", minlength: "8", maxlength: "25", required: true%>
                    </div>
                    <div class="form-check fs-7 d-flex mt-0 mb-3">
                      <%= f.check_box :remember_me, class: "form-check-input me-2" %>	
                      <%= f.label :remember_me, class: "form-check-label" do %>
                        Remember me  
                      <% end %>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                      <%= f.submit "Log in", class: "btn btn-sm btn-primary shadow-sm border border-1 border-warning" %>
                    <p class=" text-center text-muted mt-1 mb-0"><%= link_to "Create new account", signup_path, class: "fs-7 link-to" %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
    </div>
    <div class="fw-bold align-self-md-end align-self-lg-center">
      <p class="home-text font-dark m-4 px-sm-4 mb-1 mb-md-3 me-md-3 pe-md-5 align-self-center text-center">Planning your friend's birthday, or a fancy dinner party?</p>
      <p class="home-text font-dark m-4 mb-5 px-sm-4 mt-1 me-mb-5 pe-md-5 align-self-center text-center">Keep everything under control with BeMyGuest event planner!</p>
    </div>
  </div>
</section>


