<div class="object-new mb-5 mt-4">
  <%= form_with model: [@current_user, @event, @new_item],class: "d-flex flex-column flex-md-row align-items-center justify-content-center", local: true  do |f| %>
    <%= f.label :name, "New item", class: "sr-only" %>
    <%= f.text_field :name,
        class: "object-input shadow-sm p-1 px-2 bg-light form-control",
        placeholder: "Balloons",
        autocomplete: "off",
        required: true %>
    <%=f.submit "Add item", class: "shadow-sm mt-3 mt-md-0 btn btn-primary border border-warning border-1 btn-sm mx-2"%>
  <% end %>
</div>